{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "brace-style": [
            "error", 
            "1tbs", 
            { "allowSingleLine": true }
        ],
        "object-curly-spacing": ["error", "always"],
        "no-trailing-spaces": "error",
        "block-spacing": "error",
        "no-var": "error",
        "keyword-spacing": "error",
        "no-multiple-empty-lines": ["error", { "max": 2, "maxEOF": 1 }],
        "eol-last": ["error", "always"],
        "react/prop-types": [0],
        "react/display-name": [0]
    }
}
